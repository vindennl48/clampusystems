<p id="notice"><%= notice %></p>

<h1>Package</h1>

<table class=" table left ">
  <tbody>
    <tr>
      <td><strong>Order ID:</strong></td>
      <td><%= @package.order.id %></td>
    </tr>
    <tr>
      <td><strong>Is shipped:</strong></td>
      <td><%= @package.is_shipped %></td>
    </tr>
    <tr <%= @package.is_shipped ? "" : "hidden" %>>
      <td><strong>Ship date:</strong></td>
      <td><%= @package.ship_date %></td>
    </tr>
    <tr>
      <td><strong>Shipping company:</strong></td>
      <td><%= @package.shipping_company.name %></td>
    </tr>
    <tr>
      <td><strong>Charged:</strong></td>
      <td><%= @package.charged %></td>
    </tr>
    <tr>
      <td><strong>Cost:</strong></td>
      <td><%= @package.cost %></td>
    </tr>
    <tr>
      <td><strong>Fee:</strong></td>
      <td><%= @package.fee %></td>
    </tr>
    <tr>
      <td><strong>Weight:</strong></td>
      <td><%= @package.weight %></td>
    </tr>
    <tr>
      <td><strong>Size:</strong></td>
      <td><%= @package.size %></td>
    </tr>
    <tr>
      <td><strong>Tracking:</strong></td>
      <td><%= @package.tracking %></td>
    </tr>
    <tr>
      <td><strong>Notes:</strong></td>
      <td><%= @package.notes %></td>
    </tr>
  </tbody>
</table>

<div>
  <%= link_to 'Edit', edit_package_path(@package) %> |
  <%= link_to 'Back', @package.order %>
</div>
