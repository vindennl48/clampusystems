<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Fee</th>
      <th>Date due</th>
      <th>Is paid</th>
      <th>Date paid</th>
      <th>Payment type</th>
      <th>Order</th>
      <th>Credit card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.fee %></td>
        <td><%= payment.date_due %></td>
        <td><%= payment.is_paid %></td>
        <td><%= payment.date_paid %></td>
        <td><%= payment.payment_type %></td>
        <td><%= payment.order %></td>
        <td><%= payment.credit_card %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

