<p id="notice"><%= notice %></p>

<h1>Customer</h1>

<div>
  <strong>Name:</strong>
  <%= @customer.name %>
</div>

<div>
  <strong>Email:</strong>
  <%= @customer.email %>
</div>

<div>
  <strong>Phone Number:</strong>
  <%= @customer.phone_number %>
</div>

<div>
  <strong>Notes:</strong>
  <%= @customer.notes %>
</div>

<div>
  <%= link_to 'Edit', edit_customer_path(@customer) %> |
  <%= link_to 'Back', customers_path %>
</div>

<h2>Addresses</h2>

<table>
  <thead>
    <tr>
      <th>NickName</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer.addresses.each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Address', new_address_path(id: @customer.id) %>
