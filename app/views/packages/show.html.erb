<p id="notice"><%= notice %></p>

<h1>Package</h1>

<table class=" table left ">
  <tbody>
    <tr>
      <td><strong>Order ID:</strong></td>
      <td><%= link_to @package.order.id, @package.order %></td>
    </tr>
    <tr>
      <td><strong>Is shipped:</strong></td>
      <td><%= @package.is_shipped ? "Yes" : "No" %></td>
    </tr>
    <tr>
      <td><strong>Ship date:</strong></td>
      <td><%= @package.is_shipped ? @package.ship_date : "---" %></td>
    </tr>
    <tr>
      <td><strong>Shipping company:</strong></td>
      <td><%= @package.shipping_company.name %></td>
    </tr>
    <tr>
      <td><strong>Charged Customer:</strong></td>
      <td><%= number_to_currency(@package.charged) %></td>
    </tr>
    <tr>
      <td><strong>Actual Cost:</strong></td>
      <td><%= number_to_currency(@package.cost) %></td>
    </tr>
    <tr>
      <td><strong>Packing Fee:</strong></td>
      <td><%= number_to_currency(@package.fee) %></td>
    </tr>
    <tr>
      <td><strong>Weight:</strong></td>
      <td><%= @package.weight %> lbs</td>
    </tr>
    <tr>
      <td><strong>Size:</strong></td>
      <td><%= @package.size %></td>
    </tr>
    <tr>
      <td><strong>Tracking:</strong></td>
      <td><%= @package.tracking %></td>
    </tr>
    <tr>
      <td><strong>Notes:</strong></td>
      <td><%= @package.notes %></td>
    </tr>
  </tbody>
</table>

<div>
  <%= link_to 'Edit', edit_package_path(@package) %>
</div>
