<%= form_with(model: package, local: true) do |form| %>
  <% if package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :order_id %>

  <div class="field">
    <strong>Is Shipped?: </strong>
    <%= form.check_box :is_shipped %>
  </div>

  <div class="field" <%= @package.is_shipped ? "" : "hidden" %>>
    <strong>Ship Date: </strong>
    <%= form.date_select :ship_date %>
  </div>

  <div class="field">
    <strong>Shipping Company: </strong>
    <%= form.select :shipping_company_id, options_from_collection_for_select(ShippingCompany.all, :id, :name) %>
  </div>

  <div class="field">
    <strong>Charged Customer: </strong>
    <%= form.text_field :charged %>
  </div>

  <div class="field">
    <strong>Shipping Cost: </strong>
    <%= form.text_field :cost %>
  </div>

  <div class="field">
    <strong>Packing Fee: </strong>
    <%= form.text_field :fee %>
  </div>

  <div class="field">
    <strong>Weight: </strong>
    <%= form.text_field :weight %>
  </div>

  <div class="field">
    <strong>Size: </strong>
    <%= form.text_field :size %>
  </div>

  <div class="field">
    <strong>Tracking: </strong>
    <%= form.text_field :tracking %>
  </div>

  <div class="field">
    <strong>Notes: </strong>
    <%= form.text_area :notes %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
