<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Customer</th>
      <th>Total</th>
      <th>Process Date</th>
      <th>Expected Ship Date</th>
      <th>Is Shipped?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.customer.name %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= order.process_date %></td>
        <td><%= order.expected_ship_date %></td>
        <td><%= (!order.packages.empty? && order.packages.all? {|p| p.is_shipped }) ? "Yes" : "No" %></td>
        <td><%= link_to 'View', order %></td>
        <td><%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

